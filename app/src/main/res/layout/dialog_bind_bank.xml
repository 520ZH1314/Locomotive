<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_mark"
        android:layout_width="270dip"
        android:layout_height="133dip"
        android:layout_margin="10dip"
        android:orientation="vertical"
        card_view:cardCornerRadius="8dip"
        card_view:cardElevation="8dip"
        card_view:contentPaddingBottom="5dip"
        card_view:contentPaddingLeft="5dip"
        card_view:contentPaddingRight="5dp"
        card_view:contentPaddingTop="5dip">

        <ImageView
            android:clickable="true"
            android:id="@+id/bind_bank_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dip"
            android:src="@drawable/of" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:src="@drawable/tixing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="银行卡未绑定,不可提现!"
                android:textSize="@dimen/nomal" />
        </LinearLayout>

        <Button
            android:id="@+id/bind_bank_go_to_bank"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_gravity="bottom"
            android:background="@drawable/login"
            android:shadowRadius="10"
            android:text="去绑卡"
            android:textColor="@color/white"
            android:textSize="@dimen/home_more_text" />
    </android.support.v7.widget.CardView>

</RelativeLayout>

