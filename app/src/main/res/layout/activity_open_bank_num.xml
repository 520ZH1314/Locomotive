<?xml version="1.0" encoding="utf-8"?>
<layout>
 <data>
     <variable
         name="openBankViewModel"
         type="ganjiang.moye.com.locomotive.viewmodel.activity.bindbank.OpenBankNumViewModel"/>

 </data>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ganjiang.moye.com.locomotive.ui.activity.bindbank.OpenBankNumActivity">
    <!--toobar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/bind_bank_toobar"
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="银行卡"
                android:textColor="@color/home_ad"
                android:textSize="@dimen/home_more_text" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <!--注册表单-->
    <LinearLayout
        android:layout_marginTop="30dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--姓名-->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                android:text="开户姓名"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:textSize="@dimen/nomal" />

            <EditText
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginLeft="18dip"
                android:background="@null"
                android:hint="您的姓名" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_marginTop="-10dip"
            android:background="@color/login_xian"
            />

        <!--身份证号-->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/nomal"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:text="身份证号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                />

            <EditText
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:maxLines="1"
                android:inputType="phone|number"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginLeft="18dip"
                android:background="@null"
                android:hint="请输入身份证号" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_marginTop="-10dip"
            android:background="@color/login_xian"
            />
        <!--银行卡号-->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/nomal"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:text="银行卡号"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                />
            <EditText
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:maxLines="1"
                android:inputType="numberPassword"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginLeft="18dip"
                android:background="@null"
                android:hint="请输入银行卡号" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_marginTop="-10dip"
            android:background="@color/login_xian"
            />
        <!--开户行-->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                android:text="开户银行"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:textSize="@dimen/nomal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                android:text="中国农业银行"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:textSize="@dimen/nomal" />
            <ImageView
                android:layout_marginLeft="50dip"
                android:layout_gravity="center"
                android:src="@drawable/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_marginTop="-10dip"
            android:background="@color/login_xian"
            />
        <!--预留手机号-->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                android:text="开卡手机"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:textSize="@dimen/nomal" />

            <EditText
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:maxLines="1"
                android:inputType="phone|number"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginLeft="18dip"
                android:background="@null"
                android:hint="请输入预留手机号" />
        </LinearLayout>
        <!--手机验证码-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_marginTop="-10dip"
            android:background="@color/login_xian"
            />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:layout_marginLeft="22.5dp"
                android:text="短信验证"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:textSize="@dimen/nomal" />
            <EditText

                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:maxLines="1"
                android:inputType="phone|number"
                android:maxLength="11"
                android:layout_width="180dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginLeft="18dip"
                android:background="@null"
                android:hint="手机验证码" />
            <Button
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:padding="5dip"
                android:layout_gravity="center"
                android:background="@drawable/login"
                android:text="验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/nomal"
                android:layout_width="wrap_content"
                android:layout_height="40dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:layout_marginTop="-10dip"
            android:background="@color/login_xian"
            />
<RelativeLayout
    android:padding="5dip"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_marginRight="5dip"
        android:layout_centerVertical="true"
         android:gravity="center"
         android:layout_toLeftOf="@+id/tv"
        android:focusable="false"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:button="@drawable/checkbox"
     />
     <TextView

         android:gravity="center"
         android:id="@+id/tv"
         android:layout_marginRight="10dip"
         android:layout_alignParentRight="true"
         android:textSize="@dimen/nomal"
         android:text="设为默认银行卡"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
</RelativeLayout>


    </LinearLayout>
    <!-- 下一步按钮-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/login"
        android:shadowRadius="10"
        android:text="确认添加"
        android:textColor="@color/white"
        android:textSize="@dimen/home_more_text" />

</LinearLayout>
</layout>