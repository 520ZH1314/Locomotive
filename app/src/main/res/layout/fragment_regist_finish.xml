<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!-- 第一次引导图-->
    <LinearLayout
        android:layout_marginTop="30dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="15dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/xinxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dip"
                android:layout_gravity="center"
                android:textSize="@dimen/regist_nomal"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:text="信息填写"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginBottom="10dip"
            android:layout_gravity="center"
            android:background="@color/regist_divider"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="1dip">

        </View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/sfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dip"
                android:layout_gravity="center"
                android:textSize="@dimen/regist_nomal"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:text="绑定提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginBottom="10dip"
            android:layout_gravity="center"
            android:background="@color/regist_divider"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="1dip">

        </View>
        <LinearLayout
            android:layout_marginRight="15dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ffs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dip"
                android:layout_gravity="center"
                android:textSize="@dimen/regist_nomal"
                android:textColor="@color/regist_radio_button_text_pressed"
                android:text="注册完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="100dip"
        android:src="@drawable/succese"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <TextView
       android:textColor="@color/regist_radio_button_text_pressed"
       android:layout_marginTop="25dip"
       android:layout_gravity="center"
       android:text="恭喜您注册成功"
       android:textSize="@dimen/regist_finish"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/login"
        android:shadowRadius="10"
        android:text="去登录"
        android:textColor="@color/white"
        android:textSize="@dimen/home_more_text" />
   <!--编号-->
    <LinearLayout
          android:layout_marginTop="70dip"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:text="粤ICP备12345678号-1 ICP"
            android:textColor="@color/nomal_text"
            android:textSize="@dimen/login_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:text="经营许可证编号:粤B2-12345678"
            android:textColor="@color/nomal_text"
            android:textSize="@dimen/login_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
