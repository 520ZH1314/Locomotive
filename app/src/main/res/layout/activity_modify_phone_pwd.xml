<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ganjiang.moye.com.locomotive.ui.activity.me.ModifyPhonePwdActivity">
    <!--toobar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/modify_phone_pwd_toobar"
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设置"
                android:textColor="@color/home_ad"
                android:textSize="@dimen/home_more_text" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <!--手机号码-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dip">
        <TextView
            android:text="手机号码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:id="@+id/tv_phone_num"
            android:textColor="@color/home_ad"
            android:textSize="@dimen/home_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_phone_num"
            android:textColor="@color/nomal_text"
            android:textSize="@dimen/home_more_text"
            android:text="13576073491"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_marginLeft="17dp"

        android:layout_alignParentBottom="true"
        android:background="@color/nomal_text"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--验证码-->
    <LinearLayout

        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_marginLeft="17dp"
            android:layout_gravity="center"
            android:textSize="@dimen/home_more_text"
            android:textColor="@color/home_ad"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="请输入验证码"
            android:layout_gravity="center"
            android:maxLength="20"
            android:layout_width="200dp"
            android:layout_height="45dip"
            android:layout_marginLeft="30dip"

            android:background="@null"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/edit_cursor_color" />
        <Button
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dip"
            android:background="@drawable/login"
            android:shadowRadius="10"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/home_more_text" />
    </LinearLayout>
    <View
        android:layout_marginLeft="17dp"

        android:layout_alignParentBottom="true"
        android:background="@color/nomal_text"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--新密码-->
    <LinearLayout

        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_marginLeft="17dp"
            android:layout_gravity="center"
            android:textSize="@dimen/home_more_text"
            android:textColor="@color/home_ad"
            android:text="新密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="请输入新密码"
            android:layout_gravity="center"
            android:maxLength="20"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/edit_cursor_color" />
    </LinearLayout>


    <!--绑定按钮-->
    <!--button-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="60.25dip"
        android:background="@drawable/login"
        android:shadowRadius="10"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/home_more_text" />
</LinearLayout>
