<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ganjiang.moye.com.locomotive.ui.activity.me.BindMailActivity">
    <!--toobar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/bind_mail_toobar"
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设置"
                android:textColor="@color/home_ad"
                android:textSize="@dimen/home_more_text" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <!--邮箱输入-->
    <LinearLayout
        android:layout_marginTop="15dip"
       android:background="@color/white"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="55dp">
       <TextView
           android:layout_marginLeft="17dp"
           android:layout_gravity="center"
           android:textSize="@dimen/home_more_text"
           android:textColor="@color/home_ad"
           android:text="邮"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_gravity="center"
           android:layout_marginLeft="20dip"
           android:textSize="@dimen/home_more_text"
           android:textColor="@color/home_ad"
           android:text="箱"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <EditText
            android:hint="请输入邮箱账号"
            android:layout_gravity="center"
           android:maxLength="20"
           android:layout_width="match_parent"
           android:layout_height="45dip"
           android:layout_marginLeft="30dip"
             android:layout_marginRight="30dip"
           android:background="@null"
           android:inputType="textEmailAddress"
           android:maxLines="1"
           android:textCursorDrawable="@drawable/edit_cursor_color" />
   </LinearLayout>
    <!--绑定按钮-->
    <!--button-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="60.25dip"
        android:background="@drawable/login"
        android:shadowRadius="10"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/home_more_text" />
</LinearLayout>
