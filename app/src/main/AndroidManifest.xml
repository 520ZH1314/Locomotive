<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ganjiang.moye.com.locomotive">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:launchMode="singleTop" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.home.ADDetailActivity"
            android:launchMode="singleTop" />
        <activity android:name=".ui.activity.login.LoginActivity" />
        <activity
            android:name=".ui.activity.regist.RegistActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.home.ServiceActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.bindbank.BindBankActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.bindbank.OpenBankNumActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.WithDraw.WithDrawActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.bindbank.UnbindBankActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.me.InvestmentActivity"
            android:launchMode="singleTop" />
        <activity android:name=".ui.activity.me.MyCenterActivity" />
        <activity android:name=".ui.activity.me.BindMailActivity" />
        <activity android:name=".ui.activity.me.ModifyPhonePwdActivity"></activity>
    </application>

</manifest>